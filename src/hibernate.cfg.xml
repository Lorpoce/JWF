<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="JWF">
  <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
  <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/jwf</property>
  <property name="hibernate.connection.username">BnJ</property>
  <property name="hibernate.connection.password"></property>
<!--   <property name="hibernate.default_schema">JWF</property> -->
  <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
  <property name="hibernate.hbm2ddl.auto">create</property>
  <mapping class="fr.esgi.jwf.persistance.entite.Annonce"/>
 </session-factory>
</hibernate-configuration>
